<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        card_view:cardBackgroundColor="@color/magnesium"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="20dp">

        <LinearLayout
            android:id="@+id/back_layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="12">

            <TextView
                android:id="@+id/txt_han"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Han"
                android:textColor="@color/snow"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_kanji_back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Kanji"
                android:textColor="@color/snow"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/txt_mean"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Mean"
                android:textColor="@color/snow"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_show_detail"
                    android:layout_width="match_parent"
                    android:src="@drawable/angle_up"
                    android:background="@android:color/transparent"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/txt_number_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="10"
                    android:textColor="@color/snow"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        card_view:cardBackgroundColor="@color/magnesium"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="20dp">

        <TextView
            android:id="@+id/txt_kanji_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Card"
            android:textColor="@color/snow"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/txt_number_front"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back_layout_container"
            android:layout_gravity="bottom|right"
            android:text="10"
            android:textColor="@color/snow"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
